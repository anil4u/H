  <definitions>
    <definition class="compliance" id="oval:passwd:def:101" version="1">
      <metadata>
       <title>Verify group who owns 'passwd' file</title>
        <description>
          The /etc/passwd file should be owned by the appropriate group.
        </description>
      </metadata>
      <criteria>
	<criterion comment="/etc/passwd group ownership should be root" test_ref="oval:passwd:tst:101"/>
      </criteria>
    </definition>
  </definitions>

<tests>
<unix:file_test check_existence="all_exist" id="oval:passwd:tst:101" version="2" check="all" comment="Testing group ownership of /etc/passwd">
	<unix:object object_ref="oval:passwd:obj:101"/>
	<unix:state state_ref="oval:passwd:ste:101"/>
</unix:file_test>
</tests>

<objects>
<unix:file_object id="oval:passwd:obj:101" version="1" comment="/etc/passwd">
	<unix:path>/etc</unix:path>
	<unix:filename>passwd</unix:filename>
</unix:file_object>
</objects>

<states>
